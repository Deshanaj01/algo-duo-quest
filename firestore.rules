rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Questions can be read by authenticated users
    match /questions/{questionId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // Adjust as needed for admin-only writes
    }
    
    // ML insights can be read by authenticated users
    match /ml_insights/{insightId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // Adjust as needed for system-only writes
    }
  }
}