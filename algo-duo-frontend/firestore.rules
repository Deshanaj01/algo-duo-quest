rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Public read-only course content
    match /courses/{courseId} {
      allow read: if true;
      allow create, update, delete: if false;

      match /levels/{levelId} {
        allow read: if true;
        allow create, update, delete: if false;

        match /lessons/{lessonId} {
          allow read: if true;
          allow create, update, delete: if false;
        }
      }
    }

    // Questions: public read. Writes restricted to admins.
    match /questions/{questionId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && request.auth.token.admin == true;
    }

    // Attempts: users can create and read their own attempts; updates only by owner
    match /attempts/{attemptId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Users can read/write only their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Per-user progress subcollection
      match /progress/{progressId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Topic stats subcollection
      match /topic_stats/{topicId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Recently seen questions
      match /recent_questions/{qid} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
